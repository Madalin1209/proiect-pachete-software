@model IEnumerable<Author>

<a class="btn btn-success mt-5" style="margin: 10px" asp-controller="Author" asp-action="Create">Adauga autor nou</a>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nume</th>
            <th>Numar carti detinute</th>
            <th>Vezi lista de carti</th>
            <th>Editare autor</th>
            <th>Stergere autor</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model)
        {
            <tr>
                <td>@author.AuthorId</td>
                <td>@author.Name</td>
                <td>@author.Books?.Count </td>
                @if (author.Books?.Count == 0)
                {
                    <td><a class="btn btn-default" asp-area="" >Vezi lista carti</a></td>
                }
                else
                {
                    <td><a class="btn btn-info" asp-area="" asp-controller="Book" asp-action="List" asp-route-authorId="@author.AuthorId">Vezi lista carti</a></td>
                }
                <td><a class="btn btn-info" asp-area="" asp-controller="Author" asp-action="Update" asp-route-id="@author.AuthorId">Editare</a></td>
                <td><a class="btn btn-danger" asp-area="" asp-controller="Author" asp-action="Delete" asp-route-id="@author.AuthorId">Stergere</a></td>
            </tr>
        }
    </tbody>
</table>