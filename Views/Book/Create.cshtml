@model BookEditViewModel
<div class="row orderForm">
    <form asp-controller="Book" asp-action="Create" method="post" class="form-horizontal" role="form">
        <h3 class="col-md-offset-2">Adauga o carte noua</h3>


        <div class="form-group">
            <label asp-for="Book.Author" class="col-md-2 control-label">Autor</label>
            <div class="col-md-4">
                @Html.DropDownListFor(m => m.Book.AuthorId,
                             new SelectList(Model.Authors.Select(x => new { Value = x.AuthorId, Text = x.Name }), "Value", "Text"), "Selecteaza un autor",
                             htmlAttributes: new { @class = "form-control border-input" })
                <span asp-validation-for="Book.Author" class="text-danger"></span>
            </div>

            <div class="col-md-2">
                <a class="btn btn-success" style="width:100%" asp-controller="Author" asp-action="Create">Adauga un autor</a>
            </div>

        </div>
        <div class="form-group">
            <label asp-for="Book.Title" class="col-md-2 control-label">Titlul cartii</label>
            <div class="col-md-6">
                <input asp-for="Book.Title" class="form-control" placeholder="Adauga titlul cartii" />
                <span asp-validation-for="Book.Title" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="btn-group col-md-offset-2 col-md-6">
                <input class="btn btn-default" type="submit" value="Inapoi" asp-controller="Book" asp-action="List" />
                <input class="btn btn-success" type="submit" value="Adauga" />
            </div>
        </div>
    </form>
</div>